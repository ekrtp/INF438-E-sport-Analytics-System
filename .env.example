# Azure Data Lake Storage Gen2 Configuration
# Copy this file to .env and fill in your actual values

# Storage Account Configuration
AZURE_STORAGE_ACCOUNT_NAME=dota2lakehouse
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key_here

# Data Lake Configuration
AZURE_CONTAINER_NAME=data
AZURE_BRONZE_DIRECTORY=bronze
AZURE_SILVER_DIRECTORY=silver
AZURE_GOLD_DIRECTORY=gold
AZURE_LANDING_DIRECTORY=landing

# Streaming Simulation Configuration
LOCAL_SOURCE_FILE=data/main_metadata.csv
BATCH_SIZE=5
SLEEP_TIME=3

# Azure Data Factory (Optional - for reference)
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_RESOURCE_GROUP=your_resource_group_here
AZURE_DATA_FACTORY_NAME=your_adf_name_here

# Databricks Configuration (Optional - for notebook reference)
DATABRICKS_HOST=https://your-workspace.azuredatabricks.net
DATABRICKS_TOKEN=your_databricks_token_here
